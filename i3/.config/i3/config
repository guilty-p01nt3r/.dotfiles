# Mod1 = Alt | Mod4 = WinKey
set $mod Mod1

# Lock Screen and DPMS
set $lock 'swaylock -f -c 212121'
set $bl_time 600

### Idle configuration
exec_always pgrep swayidle ||  swayidle -w \
    timeout $bl_time 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep $lock

